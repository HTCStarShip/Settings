<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:padding="14.0px" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/prompt1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="14.0px" android:text="@string/current_backup_pw_prompt" />
            <EditText android:id="@id/current_backup_pw" android:layout_width="fill_parent" android:layout_height="wrap_content" android:password="true" android:singleLine="true" android:layout_below="@id/prompt1" style="@style/inputfield_default_m" />
            <TextView android:id="@id/prompt2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14.0px" android:layout_marginBottom="14.0px" android:text="@string/new_backup_pw_prompt" android:layout_below="@id/current_backup_pw" />
            <EditText android:id="@id/new_backup_pw" android:layout_width="fill_parent" android:layout_height="wrap_content" android:password="true" android:singleLine="true" android:layout_below="@id/prompt2" style="@style/inputfield_default_m" />
            <TextView android:id="@id/prompt3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14.0px" android:layout_marginBottom="14.0px" android:text="@string/confirm_new_backup_pw_prompt" android:layout_below="@id/new_backup_pw" />
            <EditText android:id="@id/confirm_new_backup_pw" android:layout_width="fill_parent" android:layout_height="wrap_content" android:password="true" android:singleLine="true" android:layout_below="@id/prompt3" style="@style/inputfield_default_m" />
        </LinearLayout>
    </ScrollView>
    <com.htc.widget.HtcFooter android:id="@id/bottomPanel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.htc.widget.HtcFooterButton android:id="@id/backup_pw_cancel_button" android:text="@string/backup_pw_cancel_button_text" />
        <com.htc.widget.HtcFooterButton android:id="@id/backup_pw_set_button" android:text="@string/backup_pw_set_button_text" />
    </com.htc.widget.HtcFooter>
</RelativeLayout>